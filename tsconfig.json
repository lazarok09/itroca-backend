{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,

    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    
    "moduleResolution": "node",
    "baseUrl": "./src/"
  },

  "lib": ["es2015"],
  "include": ["types/*.d.ts", "src/**/**/*.ts"], // Adjusted include path
  "ts-node": {
    "files": true
  },
  "files": ["src/types/user.d.ts"],
  "exclude": ["node_modules"]
}
